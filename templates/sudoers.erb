<% @defaults.each do |d| -%>
Defaults <%= d.first %> <%= '= ' + ['"', d.last, '"'].join if d.last != nil %>
<% end -%>

<% @aliases.each do |k, v| %>
  <% sudo_alias = [k.capitalize, "_Alias"].join %>
  <% v.each do |n| %>
<%= "#{sudo_alias} #{n.first.upcase} = " + [n.last].join(', ') %>
  <% end %>
<% end %>

<% @groups.each do |k, v| %>
<%= ["%", k].join %> <%= v['host'].upcase %>=(<%= v['operator'].upcase %>) <%= v['tag'].upcase + ':' if ['tag'] %> <%= v['command'] == 'all' ? (v['command'].upcase) : (v['command']) %>
<% end %>

<% @users.each do |k, v| %>
<%= k %> <%= v['host'].upcase %>=(<%= v['operator'].upcase %>) <%= v['tag'].upcase + ':' if ['tag'] %> <%= v['command'] == 'all' ? (v['command'].upcase) : (v['command']) %>
<% end %>


<%= "#includedir /etc/sudoers.d" if @include_sudoers_d %>
